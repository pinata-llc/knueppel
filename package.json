{
  "name": "knueppel",
  "version": "0.4.0",
  "description": "Compiles the Kn√ºppel language to SQL/KnexJs objects",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest"
  },
  "contributors": [
    "Agustin Zubiaga <agustin@gopinata.com>",
    "Georg Goettlich <georg@gopinata.com>"
  ],
  "license": "MIT",
  "keywords": [
    "javascript",
    "DSL",
    "language"
  ],
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "zargon": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "knex": "^0.20.1",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint -- --fix && npm run build && git add lib"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ]
  }
}
